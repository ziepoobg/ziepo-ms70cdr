    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            //"executable": "${workspaceRoot}/build/ctpl.elf",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "RP2040",
            "configFiles": ["interface/cmsis-dap.cfg", "target/rp2040.cfg"],
            "searchDir": ["C:/msys64/home/ziepo/openocd/tcl"],
            "svdFile": "C:/pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}